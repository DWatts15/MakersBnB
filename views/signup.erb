<div class="container d-flex justify-content-center align-items-center vh-100 vw-100 text-center"> 

    <div class="p-2 w-50 bd-highlight">
        <h1> Create an account </h1>

        <form action="/signup" method = 'POST'>
            <input placeholder='Create username' type="text" name="username" class="m-2"><br>
            <input placeholder='Create password' type="text" name="password" class="m-2"><br>
            <input type="submit" name="submit" value="Sign up"><br>
        </form>
    </div>

    <div class="p-2 w-50 bd-highlight">

        <h1 class=""> Sign in! </h1>
        <form action="/login" method = 'POST'>
            <input placeholder='Enter your username' type="text" name="username_login" class="m-2"><br>
            <input placeholder='Enter your password' type="text" name="password_login" class="m-2"><br>
            <input type="submit" name="submit_login" value="Sign in!"><br>
        </form>

    </div>

</div>