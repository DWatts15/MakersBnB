<%# 111111  %><head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<%# 111111 %></head>
<body>

<nav class="nav nav-pills justify-content-center m-5">
        <a class="nav-item nav-link" href="properties/new">Create new property listing</a>
        <a class="nav-item nav-link active" href="properties">Properties</a>
        <a class="nav-item nav-link disabled" href="#"> Hello <%=  @username %></a>
        <a class="nav-item nav-link" href="/signup" tabindex="-1" aria-disabled="true">Sign out</a>
        </nav>


   


<div class="container d-flex justify-content-evenly align-items-center vw-100 text-center flex-column"> 




 
    <% if @properties %>
        
        <table class="table table-striped table-hover text-center">
          <thead style="position: sticky; top: 0; background: white;">
            <tr >
              <th scope="col">Image</th>
              <th scope="col">Property name</th>
              <th scope="col">Price</th>
              <th scope="col">Availability</th>
              <th scope="col">Description</th>
              <th scope="col">Hosts name</th>
              <th scope="col"></th>
            </tr>
          </thead>
          
<tbody>
    
      <% @properties.each do |property| %>
      <form method="POST" action="/get_property_id">
      <tr>
        <th scope="row"><img src="https://via.placeholder.com/100x70"></th>
        <td class="align-middle"><%= property.name %></td>
        <td class="align-middle"><%= property.price %></td>
        <td class="align-middle"><%= property.availability %></td>
        <td class="align-middle"><%= property.description %></td>
        <td class="align-middle"><%= property.username %></td>
        <td class="align-middle"><input type="hidden"  value="<%= property.id %>" name="property_id"/><input type="submit" value="View Property" id="<%= property.id %>"/></td>
      </tr>
  
      </form>
      <% end %>
  
        </tbody>

    </table>
    <% else %>
      No properties currently listed
    <% end %>

</div>



</body>